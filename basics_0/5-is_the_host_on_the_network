#!/usr/bin/env bash
# Script to check network connectivity by pinging a specified IP

if [ "$#" -ne 1 ]; then
    echo "Usage: 5-is_the_host_on_the_network {IP_ADDRESS}"
    exit 1
fi

# Store the target IP from command line argument
TARGET_IP=$1

# Send 5 ICMP echo requests to the target
ping -c 5 "$TARGET_IP" 