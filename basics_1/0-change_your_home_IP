#!/usr/bin/env bash
# This script configures an Ubuntu server changing localhost and facebook.com resolution

# Create a new hosts file in home directory (which we can write to without sudo)
cp /etc/hosts ~/hosts.new

# Replace 127.0.0.1 localhost with 127.0.0.2 localhost
sed -i 's/127.0.0.1 localhost/127.0.0.2 localhost/g' ~/hosts.new

# Add facebook.com entry (removing any existing ones first)
sed -i '/facebook.com/d' ~/hosts.new
echo "8.8.8.8 facebook.com" >> ~/hosts.new

# Copy our modified version back to /etc/hosts
cp -f ~/hosts.new /etc/hosts
