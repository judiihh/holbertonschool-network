#!/usr/bin/env bash
# This script configures localhost to resolve to 127.0.0.2
# and facebook.com to resolve to 8.8.8.8

# Create a temporary hosts file
echo "127.0.0.2 localhost" > hosts
echo "8.8.8.8 facebook.com" >> hosts

# Set the HOSTALIASES environment variable to use our temporary hosts file
export HOSTALIASES=hosts 