#!/bin/bash

# Backup the original hosts file
sudo cp /etc/hosts /etc/hosts.bak

# Create a new hosts file with the required changes
sudo bash -c 'cat > /etc/hosts << EOL
127.0.0.2 localhost
127.0.1.1 ubuntu
8.8.8.8 facebook.com

# The following lines are desirable for IPv6 capable hosts
::1     ip6-localhost ip6-loopback
fe00::0 ip6-localnet
ff00::0 ip6-mcastprefix
ff02::1 ip6-allnodes
ff02::2 ip6-allrouters
EOL'

# Display a message about the changes
echo "Hosts file has been updated:"
echo "- localhost now resolves to 127.0.0.2"
echo "- facebook.com now resolves to 8.8.8.8"
echo ""
echo "Note: A backup of the original hosts file has been created at /etc/hosts.bak"
echo "To restore the original configuration, run: sudo cp /etc/hosts.bak /etc/hosts" 